    <style name="AppTheme.NoActionBar.Scrolling" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <!-- <item name="android:windowTranslucentNavigation">true</item> -->
    </style>

    <style name="AppTheme.NoActionBar.StatusBarPrimaryDark" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>