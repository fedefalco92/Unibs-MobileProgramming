<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_payment_details_container">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PaymentDetailsActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome_spesa"
        android:id="@+id/cost_detail_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+45"
        android:id="@+id/cost_detail_amount"
        android:layout_alignTop="@+id/cost_detail_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cost_detail_payed_by"
        android:id="@+id/textView"
        android:layout_below="@+id/cost_detail_name"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/textView"
        android:layout_alignTop="@id/textView"
        android:paddingLeft="16dp"
        android:id="@+id/user_info_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="fullName"
            android:id="@+id/cost_detail_user_fullName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(email)"
            android:id="@+id/cost_detail_email"
            />
    </LinearLayout>

    <!-- Text view con proprieta'  android:id="@+id/user_info_container"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cost_detail_date_preposition"
        android:id="@+id/payment_detail_date_preposition"
        android:layout_below="@+id/user_info_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="22/06/2016 18:24"
        android:id="@+id/cost_detail_date"
        android:layout_below="@+id/user_info_container"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cost_detail_notes"
        android:id="@+id/cost_detail_notes_label"
        android:layout_below="@+id/payment_detail_date_preposition"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes here"
        android:id="@+id/cost_detail_notes_text"
        android:layout_below="@+id/cost_detail_notes_label"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Place"
        android:id="@+id/cost_detail_position_label"
        android:layout_below="@+id/cost_detail_notes_text"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place here"
        android:id="@+id/cost_detail_position_text"
        android:layout_below="@+id/cost_detail_position_label"
        android:layout_alignParentStart="true"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/cost_detail_position_map"
        android:layout_below="@+id/cost_detail_position_text"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_detail_map_button"
        android:layout_above="@+id/cost_detail_position_map"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_map_black_24dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/cost_detail_position_map"
        android:paddingTop="16dp"
        android:id="@+id/payment_details_label"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/payment_detail_amount_details_container"
        android:layout_below="@id/payment_details_label"/>

</RelativeLayout>
</ScrollView>

