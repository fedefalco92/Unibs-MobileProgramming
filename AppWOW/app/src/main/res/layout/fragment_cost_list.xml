<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="LinearLayoutManager">
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cost_list"
            android:name="it.unibs.appwow.CostListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".fragments.CostsFragment"
            tools:listitem="@layout/fragment_cost_item" />
    <TextView
        android:id="@+id/cost_fragment_empty_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/cost_fragment_empty_message"
        android:visibility="gone"/>

</LinearLayout>