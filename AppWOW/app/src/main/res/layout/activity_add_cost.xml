<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unibs.appwow.AddCostActivity">

    <EditText
        android:id="@+id/add_cost_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_cost_name"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />
    <EditText
        android:id="@+id/add_cost_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_cost_amount"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/add_cost_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/add_cost_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_cost_notes"
        android:inputType="text"
        android:maxLines="5"
        android:layout_below="@+id/add_cost_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/add_cost_add_position_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_add_position"
        android:textStyle="bold"
        android:layout_below="@+id/add_cost_notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/add_cost_add_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_add_cost"
        android:textStyle="bold"
        android:layout_below="@+id/add_cost_add_position_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
