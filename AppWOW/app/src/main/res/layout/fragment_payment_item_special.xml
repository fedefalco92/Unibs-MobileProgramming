<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:baselineAligned="false"
    android:background="?android:attr/selectableItemBackground">
    <!-- android:background="@drawable/add_group_member_list_item_background"-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_gravity="center"
        android:layout_weight="2">

        <TextView
            android:id="@+id/payment_fragment_item_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="FullName from"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/payment_fragment_item_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="FullName to"
            android:ellipsize="end"
            android:singleLine="true"/>

        <!--
        <TextView
            android:id="@+id/payment_fragment_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="nome_utente"
            android:ellipsize="end"
            android:singleLine="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="email"
            android:id="@+id/payment_fragment_item_email"/> -->

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="paid"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/payment_fragment_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="+30"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/payment_fragment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15/17/2016"
            android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>

