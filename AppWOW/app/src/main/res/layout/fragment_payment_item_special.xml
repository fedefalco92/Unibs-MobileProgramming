<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:baselineAligned="false"
    android:background="?android:attr/selectableItemBackground">
    <!-- android:background="@drawable/add_group_member_list_item_background" -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:layout_gravity="center"
        android:layout_weight="2">

        <TextView
            android:id="@+id/payment_fragment_item_costname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Cost Name"
            android:ellipsize="end"
            android:singleLine="true"
            android:transitionName="payment_transaction"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/given_by_string_colon"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/payment_fragment_item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:text="fullName"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_string_colon"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/payment_fragment_item_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:text="fullName"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>


        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="email"
            android:id="@+id/payment_fragment_item_email"/> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/payment_fragment_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:inputType="numberDecimal"
            android:text="+30"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/payment_fragment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15/17/2016"
            android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>

