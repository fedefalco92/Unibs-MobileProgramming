<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unibs.appwow.GroupInfoActivity"
    android:id="@+id/main_container">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <it.unibs.appwow.utils.graphicTools.SquareImageView
                    android:id="@+id/group_info_group_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_shape"/>
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/group_info_progress"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_gravity="center_horizontal|top"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:id="@+id/group_info_container">
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_info_header"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">
                        <it.unibs.appwow.utils.graphicTools.RoundedImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_group_black_24dp"
                            android:id="@+id/group_info_group_photo"
                            android:layout_gravity="center_horizontal"
                            android:onClick="startViewImageIntent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOMEGRUPPO"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/group_info_group_name"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"/>
                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/group_info_container_partecipanti"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/group_info_members_number"
                        android:text="@string/group_info_members_number"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:id="@+id/group_info_add_member_row">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_person_add_white_24dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="@string/add_member"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/group_info_lista_partecipanti"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/group_info_reset_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_group"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent"
                    android:background="@android:color/white"
                    android:onClick="resetGroup"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/group_info_container_partecipanti"/>
                <Button
                    android:id="@+id/group_info_delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_group"
                    android:visibility="gone"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:onClick="deleteGroup"
                    android:layout_below="@id/group_info_reset_button"/>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_mode_edit_white_24dp"
        style="@style/FabStyle"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_member"
        app:layout_anchor="@id/group_info_lista_partecipanti"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_mode_edit_white_24dp"
        style="@style/FabStyle"/>-->
</android.support.design.widget.CoordinatorLayout>
