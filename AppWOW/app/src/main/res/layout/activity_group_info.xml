<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.unibs.appwow.GroupInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/group_info_progress"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_gravity="center_horizontal|top"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:id="@+id/group_info_container">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_info_header"
                android:orientation="horizontal">
                <it.unibs.appwow.utils.graphicTools.RoundedImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_group_black_24dp"
                    android:paddingTop="8dp"
                    android:id="@+id/group_info_group_photo"
                    android:layout_gravity="center_horizontal"
                    android:onClick="startViewImageIntent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOMEGRUPPO"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/group_info_group_name"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/group_info_container_partecipanti"
                android:layout_below="@id/group_info_header">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_info_members_number"
                    android:text="@string/group_info_members_number"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/group_info_lista_partecipanti"/>
            </LinearLayout>
            <Button
                android:id="@+id/group_info_delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:visibility="visible"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:onClick="deleteGroup"
                android:layout_below="@id/group_info_container_partecipanti"/>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
