<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_group_member_list_item_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
    >
    <TextView
        android:id="@+id/payment_fragment_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="nome_utente"
        android:layout_below="@+id/payment_fragment_item_costname"
        android:layout_alignParentLeft="true"/>

    <TextView

        android:id="@+id/payment_fragment_item_costname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cost_name"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/payment_fragment_item_email"/>

    <TextView
        android:id="@+id/payment_fragment_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+30"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/payment_fragment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="15/17/2016"
        android:layout_below="@+id/payment_fragment_item_value"
        android:layout_alignRight="@+id/payment_fragment_item_value"
        android:layout_alignEnd="@+id/payment_fragment_item_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="email"
        android:id="@+id/payment_fragment_item_email"
        android:layout_alignStart="@+id/payment_fragment_item_username"
        android:layout_below="@+id/payment_fragment_item_username"/>
</RelativeLayout>