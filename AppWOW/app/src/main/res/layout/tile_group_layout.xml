<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <it.unibs.appwow.graphicTools.SquareImageView
        android:id="@+id/imageView_groupPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/group_details"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#99000000"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/textView_groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Lorem Ipsum" />

        <TextView
            android:id="@+id/textView_personalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:focusable="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="10sp"
            android:text="123456789"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView_groupName"
            android:layout_alignEnd="@+id/textView_groupName" />

        <TextView
            android:id="@+id/group_modified_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="modified"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>
