<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:baselineAligned="false"
    android:background="?android:attr/selectableItemBackground">
    <!-- android:background="@drawable/add_group_member_list_item_background" -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:baselineAligned="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/fragment_debt_item_user_from"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="USER FROM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_debt_item_email_from"
                android:text="EMAIL FROM"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_trending_flat_black_24dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/fragment_debt_item_user_to"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="USER TO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_debt_item_email_to"
                android:text="EMAIL TO"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="50eur"
        android:id="@+id/fragment_item_debt_amount"
        android:layout_gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

</LinearLayout>

